<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:text="Dystans (w kilometrach)"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView1"
      android:layout_marginLeft="4dp"/>
  <EditText
      android:inputType="numberDecimal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/trainingDetailsDistanceEditText"
      android:layout_marginLeft="4dp"/>
  <TextView
      android:text="Czas treningu"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView2"
      android:layout_marginLeft="4dp"/>
  <EditText
      android:inputType="numberDecimal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/trainingDetailsTimeEditText"
      android:layout_marginLeft="4dp"/>
  <Button
      android:text="Edytuj trening"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp" 
      android:id="@+id/trainingDetailsEditTrainingButton"
      android:background="@color/edit_training_button_color"
      android:drawableLeft="@drawable/ic_button_edit"
      android:drawablePadding="10dp"
      android:gravity="left|center_vertical"/>
  <Button
     android:text="UsuÅ„ trening"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="16dp"
     android:drawablePadding="10dp"
     android:id="@+id/trainingDetailsDeleteTrainingButton"
     android:background="@color/delete_training_button_color"
     android:drawableLeft="@drawable/ic_button_delete"
     android:gravity="left|center_vertical"/>
</LinearLayout>